{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
		{
			"source": "/loc",
			"function": "api"
		},
		{
			"source":"**",
			"function":"api"
		},
		{
			"source": "/",
			"destination": "build/index.html"
		}
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
